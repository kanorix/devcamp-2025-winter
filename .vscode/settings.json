{
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.next": true,
    "**/next-env.d.ts": true,
    "**/.terraform": true,
    "**/.terraform.lock.hcl": true,
    "**/terraform.tfstate": true,
    "**/terraform.tfstate.backup": true
  },
  "[jsonc]": {
    "editor.tabSize": 2
  },
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ],
  "editor.formatOnSave": true,
  "cSpell.words": [
    "artifactregistry",
    "autoincrement",
    "cloudresourcemanager",
    "cloudsql",
    "cuid",
    "devcamp",
    "iamcredentials",
    "kanorix",
    "knative",
    "nextjs",
    "rkano",
    "tfstate"
  ]
}
